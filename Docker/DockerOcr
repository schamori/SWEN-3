FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

WORKDIR /app

# Installiere Ghostscript
RUN apt-get update && apt-get install -y \
    libc6-dev \
    tesseract-ocr  \
    imagemagick \
    libleptonica-dev \
    ghostscript \
    && apt-get clean

RUN ln -s /usr/lib/x86_64-linux-gnu/liblept.so.5 /usr/lib/x86_64-linux-gnu/libleptonica-1.82.0.so

COPY ./TesseractOcr/. /app/TesseractOcr

COPY ./RabbitMq/. /app/RabbitMq


COPY ./FileStorageService/. /app/FileStorageService


# Build the application
RUN dotnet build ./TesseractOcr/TesseractOcr.csproj
# Expose the application port
EXPOSE 8082

# Run the application
ENTRYPOINT ["dotnet", "run", "--project", "./TesseractOcr/TesseractOcr.csproj", "--urls", "http://0.0.0.0:8082"]
